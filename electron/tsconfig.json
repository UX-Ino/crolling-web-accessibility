{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "outDir": "../dist-electron",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "../electron/**/*.ts",
    "../lib/**/*.ts",
    "../types/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../.next",
    "../out"
  ]
}